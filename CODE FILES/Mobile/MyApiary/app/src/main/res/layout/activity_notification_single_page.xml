<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityNotificationSinglePage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonGoBackFromNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/left_arrow_svg"
            android:text="  назад"
            android:textAlignment="textStart"
            android:textColor="#e232"
            app:rippleColor="#03A9F4"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:orientation="horizontal"
                android:layout_marginTop="15sp">

                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        app:srcCompat="@drawable/document_svg"
                        android:scaleType="centerInside"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="6sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Тема:"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/textNotificationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="theme of mail"
                            android:layout_marginLeft="3sp"
                            android:textSize="20sp"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="30sp"
                        android:layout_height="20sp"
                        app:srcCompat="@drawable/ic_clock_svgrepo_com"
                        android:scaleType="centerInside"
                        android:layout_marginTop="3sp">

                    </ImageView>

                    <TextView
                        android:id="@+id/textNotificationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:text="23.56.23"
                        android:layout_marginLeft="3sp"/>
                </LinearLayout>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:layout_marginBottom="0sp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40sp"
                    android:layout_marginVertical="20sp">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textNotificationDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                    </ScrollView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonOkFromNotif"
                    android:layout_width="139dp"
                    android:layout_height="48dp"
                    android:text="Ok"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>