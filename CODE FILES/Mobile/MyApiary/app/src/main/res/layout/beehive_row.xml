<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="5sp"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="85sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageBeehive"
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/beehive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="230sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_of_beehive"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:text="#Name of beehive"
                    android:textAlignment="textStart"
                    android:maxWidth="180sp"
                    android:maxHeight="25sp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageAlarm"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginTop="4sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/error_notif"
                    android:layout_marginLeft="5sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/status_of_beehive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1sp"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2sp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageTemperature"
                    android:layout_width="20sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="1sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/temperature" />

                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="24sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="3.5sp"
                    android:text="35,3"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/imageNoise"
                    android:layout_width="20sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="10sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/noise" />

                <TextView
                    android:id="@+id/textNoise"
                    android:layout_width="wrap_content"
                    android:layout_height="24sp"
                    android:layout_marginLeft="4sp"
                    android:layout_marginTop="3.5sp"
                    android:text="34,1"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/imageHumidity"
                    android:layout_width="20sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="10sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/humidity" />

                <TextView
                    android:id="@+id/textHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="24sp"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="3.5sp"
                    android:text="26,6"
                    android:textAlignment="center"
                    android:textSize="21sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>