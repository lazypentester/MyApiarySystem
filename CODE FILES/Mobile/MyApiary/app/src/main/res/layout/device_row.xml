<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="18sp"
            android:background="@color/white"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagePhone"
                    android:layout_width="60sp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/smartphone_svg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="210sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name_of_device"
                    android:layout_width="match_parent"
                    android:layout_height="28sp"
                    android:text="Samsung Tablet S4"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/uuid_of_device_text"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:text="UID:"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/uuid_of_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1sp"
                    android:text="x38573483945"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/imageArrow"
                android:layout_width="35sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0sp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/right_arrow_svg" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>