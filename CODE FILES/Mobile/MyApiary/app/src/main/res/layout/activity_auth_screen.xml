<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAuthScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180sp"
            android:layout_marginTop="50sp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/beehello" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_email_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textAllCaps="false"
                android:textColor="#393535" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textAllCaps="false"
                android:textColor="#393535" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25sp">

                <TextView
                    android:id="@+id/btn_reset_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45sp"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Забули пароль?"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49sp">

            <Button
                android:id="@+id/button_get_started_reg"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="100sp"
                android:fontFamily="sans-serif-black"
                android:text="Увійти" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_go_to_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Реєстрація"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginLeft="128sp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>