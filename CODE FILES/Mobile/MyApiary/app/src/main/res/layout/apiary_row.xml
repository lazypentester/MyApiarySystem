<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginHorizontal="13sp"
        android:layout_marginTop="5sp"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageApiaries"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:layout_marginBottom="6sp"
                app:srcCompat="@drawable/apiary01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="177sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11sp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name_of_apiary"
                android:layout_width="167sp"
                android:layout_height="26sp"
                android:text="#Name of apiary"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_of_apiary"
                android:layout_width="167sp"
                android:layout_height="20sp"
                android:layout_marginLeft="1sp"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4sp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageConnectionWire"
                    android:layout_width="20sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="1sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/connect_apiary_true" />

                <ImageView
                    android:id="@+id/imageConnectionWireless"
                    android:layout_width="20sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="7sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/connect_beehives_true" />

                <ImageView
                    android:id="@+id/imageCountOfBeehives"
                    android:layout_width="20sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="8sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/beehives_count" />

                <TextView
                    android:id="@+id/textCountOfBeehives"
                    android:layout_width="wrap_content"
                    android:layout_height="24sp"
                    android:layout_marginLeft="7sp"
                    android:layout_marginTop="3.5sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageNotifications"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="7sp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/notification_svg_false">

        </ImageView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>