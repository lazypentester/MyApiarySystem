<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDevicesScreen">


    <Button
        android:id="@+id/buttonGoBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginTop="1dp"
        android:text="  назад"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#03A9F4"
        tools:ignore="MissingConstraints"
        android:backgroundTint="@color/white"
        android:textColor="#e232"
        android:textAlignment="textStart"
        android:drawableLeft="@drawable/left_arrow_svg"/>


    <TextView
        android:id="@+id/textViewNameScreen"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="4dp"
        android:text="Мої девайси:"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoBack" />

    <ListView
        android:id="@+id/devicesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameScreen">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>